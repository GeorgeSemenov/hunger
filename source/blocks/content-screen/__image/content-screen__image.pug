mixin content-screen__image(modifier)
  picture.content-screen__image&attributes(attributes)
    source(type="image/webp" srcset=require("../../img/fire&coals-400.png") media="(min-width: 600px)")
    source(type="image/webp" srcset=require("../../img/fire&coals-200.png") media="(min-width: 320px)")
    +content-screen__img()
    